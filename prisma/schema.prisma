generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("SUPABASE_STRING")
}

model User {
  id         String   @id @default(uuid())
  role       String
  email      String   @unique
  method     String
  password   String?
  username   String   @unique
  googleId   String?
  googlePic  String?
  profilePic String?
  isVerified Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
